{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
